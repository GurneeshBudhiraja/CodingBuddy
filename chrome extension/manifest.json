{
  "manifest_version": 3,
  "name": "Clipboard Copier with Icon",
  "version": "1.0",
  "description": "Copy text to clipboard from background script with icon in context menu.",
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
